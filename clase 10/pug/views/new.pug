html
    head 
        title= "Products App"
        link(href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-1BmE4kWBq78iYhFldvKuhfTAU6auU8tT94WrHftjDbrCEXSU1oBoqyl2QvZ6jIW3" crossorigin="anonymous")

    body
        div(class="container") 
            h1= "New product"
            form(action=url method=method)
                div(class="mb-3") 
                    label(for="titleInput" class="form-label") Title
                    input(type="text" class="form-control" name="title" id="titleInput" placeholder="Insert product title")
                div(class="mb-3") 
                    label(for="priceInput" class="form-label") Price
                    input(type="number" class="form-control" name="price" id="priceInput" placeholder="Insert product title")
                div(class="mb-3") 
                    label(for="thumbnailInput" class="form-label") Thumbnail
                    input(type="text" class="form-control" name="thumbnail" id="thumbnailInput" placeholder="Insert product title")
                button(type="submit" class="btn btn-primary") #{button}