<%-include('./partials/head')%>
<div class="container">   
    <h1>Lista de productos</h1>
    <% if (products == []) { %>
        <p>No products to show, please add some...</p>
    <%} else {%>
        <table class="table">
            <thead>
                <tr>
                    <th scope="col">#</th>
                    <th scope="col">First</th>
                    <th scope="col">Last</th>
                    <th scope="col">Handle</th>
                </tr>
            </thead>
            <tbody>
                <%products.forEach((el)=>{%>
                    <tr>
                        <th scope="row"><%=el.id%></th>
                        <td><%=el.title%></td>
                        <td><%=el.price%></td>
                        <td><img src=<%=el.thumbnail%> alt=<%=el.title%>" style="width: 60px;"></td>
                    </tr>
                <%})%>
            </tbody>
        </table>   
    <%}%>
    <a href="/" class="btn btn-danger">Add products</a>
</div> 