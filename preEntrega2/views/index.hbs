<div class="container">   
    <h1>Lista de productos</h1>
    {{#if empty}}
        <p>No products to show, please add some...</p>
    {{else}}
        <table class="table">
            <thead>
                <tr>
                    <th scope="col">#</th>
                    <th scope="col">First</th>
                    <th scope="col">Last</th>
                    <th scope="col">Handle</th>
                </tr>
            </thead>
            <tbody>
                {{#each products}}
                    <tr>
                        <th scope="row"></th>
                        <td>{{this.title}}</td>
                        <td>{{this.price}}</td>
                        <td><img src="{{this.thumbnail}}" alt="{{this.title}}" style="width: 60px;"></td>
                    </tr>
                {{/each}}
            </tbody>
        </table>   
    {{/if}}
    <a href="/" class="btn btn-danger">Add products</a>
</div> 